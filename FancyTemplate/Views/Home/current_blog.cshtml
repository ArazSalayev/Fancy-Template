@model FancyTemplate.ViewModel.View_Model
@{
    ViewBag.Title = "current_blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--================Banner Area =================-->
<section class="banner_area">
    <div class="container">
        <div class="banner_text_inner">
            <h4>Current Blog</h4>
            
        </div>
    </div>
</section>
<!--================End Banner Area =================-->
<!--================Static Area =================-->
<section class="static_area">
    <div class="container">
        <div class="static_inner">
            <div class="row">
                <div class="col-lg-9">
                    <div class="static_main_content">
                        <div class="static_social">
                            <ul>
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                                <li><a href="#"><i class="fa fa-thumb-tack" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                        <div class="static_img">
                            <img class="img-fluid" src="img/static-1.jpg" alt="">
                        </div>
                        @foreach (var item in Model._current_blog)
                        {
                            <h3 style="margin:20px">@item.blog_title</h3>
                            <img src="~/Uploads/@item.blog_img" style="width:700px;height:500px" />
                            <p style="margin:30px;width:700px">@item.blog_content</p>
                        }




                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="right_sidebar_area">
                        <aside class="right_widget r_news_widget">
                            <div class="r_w_title">
                                <h3>Recent News</h3>
                            </div>

                            @foreach (var item in Model._blog)
                            {
                                <div class="news_inner">
                                    <div class="news_item">
                                        <a href="#"><h4>@item.blog_title</h4></a>
                                        <a href="#"><h6>@item.blog_content.Substring(0, 20)...</h6></a>
                                    </div>
                                </div>
                            }



                        </aside>
                        <aside class="right_widget r_cat_widget">
                            <div class="r_w_title">
                                <h3>Categories</h3>
                            </div>
                            @foreach (var item in Model._category)
                            {
                                <ul>
                                    <li><a href="#">@item.category_name</a></li>
                                </ul>
                            }




                        </aside>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Static Area =================-->
